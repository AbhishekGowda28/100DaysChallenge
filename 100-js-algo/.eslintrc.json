{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "module": false,
        "require": false
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js"
            ],
            "env": {
                "jest": true
            }
        }
    ],
    "rules": {
        "no-console": "warn",
        "no-debugger": "warn",
        "array-bracket-newline": "error",
        "brace-style": "error",
        "comma-spacing": "error",
        "camelcase": "error",
        "curly": "error",
        "default-case": "error",
        "eol-last": "error",
        "max-len": [
            "error",
            320
        ],
        "max-lines": [
            "warn",
            {
                "max": 150
            }
        ],
        "max-params": [
            "error",
            {
                "max": 2
            }
        ],
        "newline-before-return": "error",
        "no-var": "error",
        "no-extra-semi": "error",
        "no-inline-comments": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 0,
                "maxBOF": 0
            }
        ],
        "no-useless-call": "error",
        "no-eval": "error",
        "prefer-const": "error",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "sort-imports": "error"
    }
}